# Database
DATABASE_URL=postgresql+asyncpg://cfo_user:cfo_password@localhost:5432/cfo_consulta
DATABASE_URL_SYNC=postgresql://cfo_user:cfo_password@localhost:5432/cfo_consulta

# Security
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
ALGORITHM=HS256
SESSION_EXPIRATION_HOURS=24

# Encryption (AES-256)
ENCRYPTION_KEY=your-encryption-key-here-change-in-production-32-bytes

# Application
APP_NAME=Sistema de Consulta Pública CFO
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@cfo.org.br
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=Consulta Pública CFO <noreply@cfo.org.br>

# Timezone
TIMEZONE=America/Sao_Paulo

# Public URL
PUBLIC_URL=https://consultapublica.cfo.org.br

# Captcha (opcional)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
